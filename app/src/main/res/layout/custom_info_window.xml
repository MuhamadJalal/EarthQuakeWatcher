<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconInfo"
                android:src="@android:drawable/ic_dialog_alert"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/warning_sign" />
            <TextView
                android:id="@+id/winTitle"
                android:text="@string/text"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_toEndOf="@id/iconInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/magnitude"
                android:text="@string/magnitude"
                android:layout_toEndOf="@id/iconInfo"
                android:layout_below="@id/winTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn"
                android:layout_toEndOf="@id/magnitude"
                android:layout_marginStart="6dp"
                android:layout_alignBottom="@id/magnitude"
                android:textSize="14sp"
                android:text="@string/more_info"
                android:textColor="@color/colorAccent"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>